                            <TextBlock Style="{StaticResource HeaderTextStyle}">
                                Bacon ipsum dolor
                            </TextBlock>
                        </Grid>
                        <TextBlock Style="{StaticResource TitleTextStyle}" Margin="25,0,0,10">SubheaderTextStyle</TextBlock>
